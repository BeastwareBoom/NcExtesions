<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="720">

            <shape
                android:innerRadius="10dp"
                android:shape="ring"
                android:thickness="3dp"
                android:useLevel="false">
                <gradient
                    android:centerColor="@color/nc_btn_bg_dark"
                    android:endColor="@color/nc_white"
                    android:startColor="@color/nc_fg"
                    android:type="sweep"/>
            </shape>

        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="720"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="0">

            <shape
                android:innerRadius="10dp"
                android:shape="ring"
                android:thickness="3dp"
                android:useLevel="false">
                <gradient
                    android:centerColor="@color/nc_red"
                    android:endColor="@color/nc_white"
                    android:startColor="@color/nc_red"
                    android:type="sweep"/>
            </shape>

        </rotate>
    </item>

</layer-list>