<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="180"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="0">

    <shape
        android:innerRadius="10dp"
        android:shape="ring"
        android:thickness="3dp"
        android:useLevel="false">
        <gradient
            android:centerColor="@color/nc_btn_bg_dark"
            android:endColor="@color/nc_white"
            android:startColor="@color/nc_fg"
            android:type="sweep"/>
    </shape>

</rotate>